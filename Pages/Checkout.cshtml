@page "{choices:long}"
@model MOTM.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Total Payable: @Model.Cost.ToString("C")</h1>
<form method="POST">
    <fieldset>
        <legend>Choose the date & time within a month and no earlier than a week:</legend>
        <label asp-for="InputDate">
            Select a Date:
            <input type="date"
                   value="@(DateTime.Now.AddDays(7).ToString("yyyy-MM-dd"))"
                   min="@(DateTime.Now.AddDays(7).ToString("yyyy-MM-dd"))"
                   max="@(DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd"))"
                   asp-for="InputDate"
            />
        </label>
        <label asp-for="InputHour">
            Select an Hour:
            <select asp-for="InputHour" required>
                <option value="00">00</option>
                <option value="01">01</option>
                <option value="02">02</option>
                <option value="03">03</option>
                <option value="04">04</option>
                <option value="05">05</option>
                <option value="06">06</option>
                <option value="07">07</option>
                <option value="08">08</option>
                <option value="09">09</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                <option value="16">16</option>
                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
                <option value="21">21</option>
                <option value="22">22</option>
                <option value="23">23</option>
            </select>
        </label>
        <label asp-for="InputMinute">
            Select a Minute
            <select asp-for="InputMinute" required>
                <option value="00">00</option>
                <option value="15">15</option>
                <option value="30">30</option>
                <option value="45">45</option>
            </select>
        </label>
        <button type="submit">Submit Payment Details</button>
    </fieldset>
</form>